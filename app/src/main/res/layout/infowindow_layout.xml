<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/station_info_layout"
    android:layout_width="@+dimen/infowindow_width_dp"
    android:layout_height="@+dimen/infowindow_height_dp"
    android:orientation="horizontal"
    android:background="@android:color/transparent"
    android:alpha="1">

    <ImageView
        android:id="@+id/marker_icon"
        android:layout_width="@+dimen/thumbnail_preferred_width_dp"
        android:layout_height="@+dimen/thumbnail_preferred_height_dp"
        android:layout_marginTop="2dp"
        android:src="@null"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:alpha="1"/>

    <TextView
        android:id="@+id/marker_label"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_below="@+id/marker_icon"
        android:textStyle="bold"
        android:text="@string/def_label"
        android:alpha="1"
        android:textColor="#000"/>
</RelativeLayout>
</LinearLayout>